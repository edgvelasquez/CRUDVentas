@model IEnumerable<CRUDVentas.Models.Tbl_Region>

@{
    ViewBag.Title = "Región";
}

<h2>Regiones</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cod_region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cod_region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cod_region }, new { @class = "btn btn-primary" }) |
           
            @Html.ActionLink("Eliminar", "Delete", new {  id=item.cod_region }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
