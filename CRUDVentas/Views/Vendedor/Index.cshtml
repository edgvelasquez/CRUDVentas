@model IEnumerable<CRUDVentas.Models.Tbl_Vendedor>

@{
    ViewBag.Title = "Vendedores";
}

<h2>Vendedores</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<p>
    @Html.ActionLink("Exportar excel", "Export", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.rut) 
        </th>
        <th>
            Nombre completo
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Region.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pais)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)  @Html.DisplayFor(modelItem => item.a_paterno) @Html.DisplayFor(modelItem => item.a_materno)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Region.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.rut  }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new {  id=item.rut  }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
